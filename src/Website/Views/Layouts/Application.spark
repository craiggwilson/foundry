<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <title>
      <use content="title">Foundry</use>
    </title>
    <link rel="stylesheet" href="${Links.Content.Application_less}" type="text/css" />
    <use content="head"/>
  </head>
  <body>
    <div id="page">
      <div id="header">
        <div id="accountContainer">
          <use content="account">
            <ul id="accountMenu">
              <li>
                <User />
              </li>
              <use content="accountMenu" />
              <li>Help</li>
            </ul>
          </use>
        </div>
        <div id="banner">
            <use content="banner">
				<ul id="menu">
					<li class="selected">${Html.ActionLink("Dashboard", MVC.Dashboard.Index())}</li>
					<li>${Html.ActionLink("Register", MVC.Account.Register())}</li>
					<li>${Html.ActionLink("Logout", MVC.Account.Logout())}</li>
					<use content="menuExt" />
				</ul>
			</use>
        </div>
      </div>

      <div id="main">
        <use content="main">
          <ViewMessage />
          <use content="view" />
        </use>
        <div id="footer">
          <use content="footer" />
        </div>
      </div>
    </div>
  </body>
</html>